<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/cor_fundo">

    <!--  Header  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top">

        <TextView
            android:layout_weight="1"
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textColor="@color/cor_texto_selecionado"
            android:textSize="32dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_weight="2"
            android:id="@+id/podcasts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podcasts"
            android:textColor="@color/cor_texto_nao_selecionado"
            android:textSize="32dp">
        </TextView>

    </LinearLayout>


    <!--  Navegação  -->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top">

        <!--    Texto + Linha    -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_weight="1"
                android:id="@+id/playlists"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Playlists"
                android:textColor="@color/cor_texto_selecionado"
                android:textSize="19dp"
                android:textStyle="bold"
                >
            </TextView>

            <View android:layout_height="4dp"
                android:layout_width="75dp"
                android:background="@color/cor_destaque"
                android:layout_marginTop="7dp"/>
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:id="@+id/artists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artists"
            android:textColor="@color/cor_texto_nao_selecionado"
            android:textSize="19dp"
            >
        </TextView>

        <TextView
            android:layout_weight="2"
            android:id="@+id/albums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albums"
            android:textSize="19dp"
            android:textColor="@color/cor_texto_nao_selecionado"
            >
        </TextView>

    </LinearLayout>


    <!--  Layout das playlists  -->
    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

    <!--    Create Playlist    -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/addPlaylist"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/addplaylist">
            </ImageView>

            <TextView
                android:id="@+id/criarplaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Create Playlist"
                android:textColor="@color/cor_texto_selecionado"
                android:textSize="19dp"
                android:textStyle="bold"
                android:translationY="60px"


                >

            </TextView>

        </LinearLayout>


        <!--    Músicas Curtidas    -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/musicasCurtidas"
                android:src="@drawable/musicascurtidas"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp">

            </ImageView>

            <!--      Título e Artista      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:translationY="30px"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Liked Songs"
                    android:textSize="19dp"
                    android:textColor="@color/cor_texto_selecionado"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="6 songs"
                    android:textSize="15dp"
                    android:textColor="@color/cor_texto_nao_selecionado">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/feelingud"
                android:src="@drawable/casiopea"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp">

            </ImageView>

            <!--      Título e Artista      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:translationY="30px"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Feelin' Good"
                    android:textSize="19dp"
                    android:textColor="@color/cor_texto_selecionado"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="by Spotify"
                    android:textSize="15dp"
                    android:textColor="@color/cor_texto_nao_selecionado">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/goodvibes"
                android:src="@drawable/churrasquinho"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp">

            </ImageView>

            <!--      Título e Artista      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:translationY="30px"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Good Vibes"
                    android:textSize="19dp"
                    android:textColor="@color/cor_texto_selecionado"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="by Spotify"
                    android:textSize="15dp"
                    android:textColor="@color/cor_texto_nao_selecionado">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/confidence"
                android:src="@drawable/lifedon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp">

            </ImageView>

            <!--      Título e Artista      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:translationY="30px"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Confidence Boost"
                    android:textSize="19dp"
                    android:textColor="@color/cor_texto_selecionado"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="by Spotify"
                    android:textSize="15dp"
                    android:textColor="@color/cor_texto_nao_selecionado">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/feels"
                android:src="@drawable/romance"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp">

            </ImageView>

            <!--      Título e Artista      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:translationY="30px"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="All The Feels"
                    android:textSize="19dp"
                    android:textColor="@color/cor_texto_selecionado"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="by Spotify"
                    android:textSize="15dp"
                    android:textColor="@color/cor_texto_nao_selecionado">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/boost"
                android:src="@drawable/thriller"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp">

            </ImageView>

            <!--      Título e Artista      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:translationY="30px"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Mood Booster"
                    android:textSize="19dp"
                    android:textColor="@color/cor_texto_selecionado"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="by Spotify"
                    android:textSize="15dp"
                    android:textColor="@color/cor_texto_nao_selecionado">

                </TextView>

            </LinearLayout>

        </LinearLayout>







    </LinearLayout>










</LinearLayout>